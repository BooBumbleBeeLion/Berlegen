<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:background="#fa2255"
        android:scaleType="centerCrop"
        android:src="@drawable/fonanimal" />

    <ImageView
        android:id="@+id/father"
        android:layout_width="112dp"
        android:layout_height="327dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="75dp"
        android:background="#0000"
        android:src="@drawable/papa" />

    <ImageView
        android:id="@+id/mother"
        android:layout_width="99dp"
        android:layout_height="338dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:layout_toEndOf="@+id/father"
        android:background="#0000"
        android:src="@drawable/mama" />

    <ImageView
        android:id="@+id/grandMother"
        android:layout_width="120dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/grandFather"
        android:background="#0000"
        android:src="@drawable/babushka" />

    <ImageView
        android:id="@+id/grandFather"
        android:layout_width="101dp"
        android:layout_height="377dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:layout_toEndOf="@+id/mother"
        android:background="#0000"
        android:src="@drawable/ded" />

    <ImageView
        android:id="@+id/smallSister"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/smallBro"
        android:background="#0000"
        android:src="@drawable/sestra" />

    <ImageView
        android:id="@+id/smallBro"
        android:layout_width="95dp"
        android:layout_height="161dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginBottom="31dp"
        android:background="#0000"
        android:src="@drawable/brat" />

    <TextView
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#43A30C"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="Найди картинки"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        style="@style/text"/>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>