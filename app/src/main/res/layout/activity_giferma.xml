<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fon2" />

    <ImageView
        android:id="@+id/cow"
        android:layout_width="245dp"
        android:layout_height="149dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="196dp"
        android:background="#0000"
        android:src="@drawable/korova" />

    <ImageView
        android:id="@+id/pig"
        android:layout_width="90dp"
        android:layout_height="108dp"
        android:layout_above="@+id/goose"
        android:layout_alignEnd="@+id/icon"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="15dp"
        android:background="#0000"
        android:src="@drawable/svinka" />

    <ImageView
        android:id="@+id/goat"
        android:layout_width="188dp"
        android:layout_height="242dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:background="#0000"
        android:src="@drawable/koza" />

    <ImageView
        android:id="@+id/chicken"
        android:layout_width="136dp"
        android:layout_height="128dp"
        android:layout_above="@+id/pig"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="62dp"
        android:background="#0000"
        android:src="@drawable/kurica" />

    <ImageView
        android:id="@+id/goose"
        android:layout_width="131dp"
        android:layout_height="98dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-3dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="68dp"
        android:layout_toStartOf="@+id/goat"
        android:background="#0000"
        android:src="@drawable/gus" />

    <TextView
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#43A30C"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="Найди картинки"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>