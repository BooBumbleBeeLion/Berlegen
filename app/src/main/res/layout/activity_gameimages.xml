<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelativeLayout">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fon1" />


    <LinearLayout
        android:id="@+id/firstRow"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/message_input"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pribori"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pribori" />

        <ImageView
            android:id="@+id/semya"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/semya" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/firstRow">
        <ImageView
            android:id="@+id/domzveri"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/domzveri" />

        <ImageView
            android:id="@+id/ferma"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ferma"/>
    </LinearLayout>

    <TextView
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#43A30C"
        android:clickable="false"
        android:gravity="center_vertical"
        android:text="Игровая комната"
        android:paddingLeft="60dp"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>