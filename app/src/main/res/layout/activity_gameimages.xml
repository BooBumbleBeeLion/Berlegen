<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelativeLayout">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/imagePribori"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/message_input"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/numberstroke">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/number"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePribori"
        android:layout_alignStart="@id/imagePribori"
        android:layout_alignEnd="@id/imagePribori"
        android:layout_marginTop="-14dp"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/numberstroke90"
        android:gravity="center"
        android:padding="5dp"
        android:text="Кухонные приборы"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/imageSemya"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/message_input"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/animalstroke">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/animals"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSemya"
        android:layout_alignStart="@id/imageSemya"
        android:layout_alignEnd="@id/imageSemya"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-14dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/animalstroke90"
        android:gravity="center"
        android:padding="5dp"
        android:text="Семья"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/imageDomZveri"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/number"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/foodstroke">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/food"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDomZveri"
        android:layout_alignStart="@id/imageDomZveri"
        android:layout_alignEnd="@id/imageDomZveri"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-14dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/foodstroke90"
        android:gravity="center"
        android:padding="5dp"
        android:text="Домашние животные"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/imageFerma"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:layout_below="@+id/animals"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/profstroke">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/prof"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/imageFerma"
        android:layout_alignStart="@id/imageFerma"
        android:layout_alignEnd="@id/imageFerma"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-14dp"
        android:layout_marginEnd="-10dp"
        android:background="@drawable/profstroke90"
        android:gravity="center"
        android:text="Животные на ферме"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#43A30C"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="Игровая комната"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        style="@style/text"/>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>