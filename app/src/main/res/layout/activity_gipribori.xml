<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_input"
        android:adjustViewBounds="true"
        android:src="@drawable/fonpribori197" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/icon"
        android:background="#FDDAB4"/>

    <ImageView
        android:id="@+id/fork"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="21dp"
        android:background="#0000"
        android:src="@drawable/pribori1" />

    <ImageView
        android:id="@+id/spoon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="22dp"
        android:background="#0000"
        android:src="@drawable/pribori2" />

    <ImageView
        android:id="@+id/plate"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/message_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="3dp"
        android:background="#0000"
        android:src="@drawable/pribori3" />

    <ImageView
        android:id="@+id/cup"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignEnd="@+id/pot"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/pribori4" />

    <ImageView
        android:id="@+id/knife"
        android:layout_width="69dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="340dp"
        android:background="#0000"
        android:src="@drawable/pribori5" />

    <ImageView
        android:id="@+id/pot"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_below="@+id/message_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="335dp"
        android:layout_marginEnd="185dp"
        android:src="@drawable/pribori6" />

    <ImageView
        android:id="@+id/skillet"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="247dp"
        android:background="#0000"
        android:src="@drawable/pribori7" />

    <ImageView
        android:id="@+id/stul"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="462dp"
        android:background="#0000"
        android:src="@drawable/pribori8" />

    <ImageView
        android:id="@+id/polotence"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="195dp"
        android:background="#0000"
        android:src="@drawable/pribori9" />

    <ImageView
        android:id="@+id/skalka"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="302dp"
        android:background="#0000"
        android:src="@drawable/pribori10" />

    <ImageView
        android:id="@+id/polovnik"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="244dp"
        android:background="#0000"
        android:src="@drawable/pribori11" />

    <TextView
        android:id="@+id/message_input"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#43A30C"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingStart="60dp"
        android:text="Найди картинки"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>