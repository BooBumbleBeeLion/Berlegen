<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fa2255"
        android:scaleType="centerCrop"
        android:src="@drawable/fonanimal" />

    <ImageView
        android:id="@+id/cat"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="230dp"
        android:background="#0000"
        android:src="@drawable/zveri2" />

    <ImageView
        android:id="@+id/dog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="2dp"
        android:background="#0000"
        android:src="@drawable/zveri1" />


    <ImageView
        android:id="@+id/parrot"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_below="@+id/message_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="14dp"
        android:background="#0000"
        android:src="@drawable/zveri3" />

    <ImageView
        android:id="@+id/hamster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="82dp"
        android:background="#0000"
        android:src="@drawable/zveri4" />

    <TextView
        android:id="@+id/message_input"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#43A30C"
        android:clickable="false"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="Найди картинки"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="#0000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>